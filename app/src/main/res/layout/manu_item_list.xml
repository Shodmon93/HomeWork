<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pizzaIMG"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/pizza_001"/>



        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pizzaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="peperoni"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="23sp"/>
            <TextView
                android:id="@+id/pizzaInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Красный лук, соленые огурчики, томаты, соус бургер, ветчина халяль, сыр моцарелла"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="от 60.00 C"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_gravity="end"/>

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>